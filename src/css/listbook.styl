body,html
    width: 100%
    height: 100%
*
    margin: 0
    padding: 0
body
    display: flex
    flex-direction: column
    header
        position relative  
        width: 100%
        height: 50px
        background: #f60
        color: white
        text-align: center
        line-height: 50px
        font-size: 20px
        font-weight: bold
        span
         position absolute
         left 5px
         font-size: 30px
    .operate
        display: flex
        align-items: center
        width: 100%
        height: 30px
        // background: blue
        .pic
            width: 20%
            height: 100%
            text-align: center
            line-height: 30px
            // background: red
        .text
            display: flex
            justify-content: space-evenly
            align-items: center
            width: 50%
            height: 100%
            div
                font-size: 12px
        .btn
            flex: 1
            height: 100%
            // background: yellow
            text-align: center
            line-height: 30px
    main
        flex: 1
        overflow-y: scroll
        .list
            display: flex
            width: 100%
            height: 82.8px
            // background: red
            align-items: center
            .pic
                width: 20%
                height: 82.8px
                background: red
                img
                    width: 100%
                    height: 100%
            .text
                width: 50%
                height: 82.8px
                // background: blue
            .btn
                flex: 1
                display: flex
                justify-content: center
                align-items: center
                height: 82.8px
                
                button
                    width: 50%
                    height: 30PX
                    background: red
                    border-radius: 10px
                    color: white
