body,html
    width: 100%
    height: 100%
*
    margin: 0
    padding: 0
body
    display: flex
    flex-direction: column
    header
        width: 100%
        height: 50px
        background: #f60
        color: white
        text-align: center
        line-height: 50px
        font-size: 20px
        font-weight: bold
    main
        flex: 1
        display: flex
        background: skyblue
        justify-content: center
        align-items: center
        flex-wrap: wrap
        .booknamebox
            // margin-top: 50px
            width: 70%
            height: 60px
            
            .text
                color: white
                width: 100%
                height: 30px
                font-size: 18px
            .contentbox
                width: calc(100% - 2px)
                height: 28px
                // box-sizing: border-box
                border: 1px solid #fff
        .classifybox
            width: 70%
            height: 60px
            
            .text
                color: white
                width: 100%
                height: 30px
                font-size: 18px
            .contentbox
                width: calc(100% - 2px)
                height: 28px
                // box-sizing: border-box
                border: 1px solid #fff
        .picbox
            display: flex
            width: 80%
            height: 100px
            
            .text
                width: 15%
                height: 100%
                line-height: 100px
                text-align: center
                color: white
                font-size: 18px
            .pic
                position relative
                margin-left: 20px
                width: calc(30.7% - 2px)
                height: calc(100% - 2px)
                background: #eee
                border: 1px dashed #fff
                text-align: center
                line-height: 100px
                font-size: 30px
                img
                    position absolute
                    width: 100%
                    height: 100%
                    
                    top: 0
                    left: 0

        .brief-introduction
            width: 70%
            height: 60px
            .text
                color: white
                width: 100%
                height: 30px
                font-size: 18px
            .contentbox
                width: calc(100% - 2px)
                height: 50px
                // box-sizing: border-box
                border: 1px solid #fff
        button
            width: 70%
            height: 30px
            background: pink
            border: 1px solid #fff
    
  
            


